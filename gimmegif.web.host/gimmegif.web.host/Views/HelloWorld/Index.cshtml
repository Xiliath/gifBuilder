@model gimmegif.web.host.Models.HelloWorldViewModels.IndexViewModel
@{
    ViewData["Title"] = "!!!GIMMEGIF!!!";
}

<div class="row">
    @Model.Info
</div>
<div class="row">
    <form method="post" enctype="multipart/form-data" asp-controller="HelloWorld" asp-action="Index">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="TheImages" multiple />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Delay in milliseconds:</p>
                <input type="number" name="Delay" value="@Model.Delay" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Textgrootte: (default 48)</p>
                <input type="number" name="TextSize" value="@Model.TextSize" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>

    <img src="@Model.TheGif" alt="GIMMEGIF" border="0" />
</div>
